<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profil.staff.StaffActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/dark_pink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_view_staff_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff Panel"
                        android:layout_marginBottom="10dp"
                        android:textSize="24sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_to_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="8dp"
                app:strokeWidth="0.7dp"
                android:text="Items"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_pink"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_light"
                android:textAlignment="viewStart"
                app:icon="@drawable/ic_right_24"
                app:iconGravity="end"
                app:iconTint="@color/dark_pink"
                app:strokeColor="@color/dark_pink"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/card_view_background"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_to_create_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="8dp"
                app:strokeWidth="0.7dp"
                android:text="Auction"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_pink"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_light"
                android:textAlignment="viewStart"
                app:icon="@drawable/ic_right_24"
                app:iconGravity="end"
                app:iconTint="@color/dark_pink"
                app:strokeColor="@color/dark_pink"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/button_to_items"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_to_see_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="8dp"
                app:strokeWidth="0.7dp"
                android:text="Bids"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_pink"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_light"
                android:textAlignment="viewStart"
                app:icon="@drawable/ic_right_24"
                app:iconGravity="end"
                app:iconTint="@color/dark_pink"
                app:strokeColor="@color/dark_pink"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/button_to_create_item"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
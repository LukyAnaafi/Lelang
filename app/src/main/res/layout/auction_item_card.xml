<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingTop="4dp"
        android:layout_marginVertical="8dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/calm_blue"
            app:cardCornerRadius="6dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_image"/>

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_user"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_light"
            app:layout_constraintTop_toBottomOf="@id/text_id"
            app:layout_constraintStart_toEndOf="@id/card_view_image"/>

        <TextView
            android:id="@+id/text_open_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="telp"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_light"
            app:layout_constraintTop_toBottomOf="@id/text_item"
            app:layout_constraintStart_toEndOf="@id/card_view_image"/>

        <TextView
            android:id="@+id/text_date_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="telp"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_light"
            app:layout_constraintTop_toBottomOf="@id/text_open_price"
            app:layout_constraintStart_toEndOf="@id/card_view_image"/>

        <ImageView
            android:id="@+id/button_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>